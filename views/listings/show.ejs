<% layout("layouts/boilerplate") %>

<body>
    <div class="row mt-3 ">
        <div class="col-8 offset-3 col-md-6 offset-md-3 col-sm-10 offset-sm-1 mb-0">
            <h2> <%= listing.title %></h2>
        </div>
        <div class="card listing-card col-6 offset-3 col-md-6 offset-md-3 col-sm-10 offset-sm-1 ">
            <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="<%= listing.title %>">
            <div class="card-body">
                <h6 class="card-text mt-1">Owned By: <i><%= listing.owner.username%></i></h6>
                <h5 class="card-text mt-1"><%= listing.description %></h5>
                <h5 class="card-text">&#8377 <%= listing.price ? listing.price.toLocaleString("en-IN") : 'N/A' %></h5>
                <h5 class="card-text"><i class="fa-solid fa-location-dot"></i> <%= listing.location %> , <%= listing.country %></h5>
            </div><br>

            <% if( currUser && currUser._id.equals(listing.owner._id)) { %>
            <div class="btns">   
                <form method="GET" action="/listings/<%= listing._id%>/edit">
                    <button class="btn"> Edit</button>
                </form>
                <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
                    <button class="btn"> Delete </button>
                </form>
            </div>
            <% } %><hr>
        </div>
            <div class="reviews-section col-6 offset-3 mb-3">
            <% if(currUser){ %>
            <form method="POST" action="/listings/<%= listing._id %>/reviews" class="needs-validation" novalidate>    
                <h3>Leave a Review</h3>
                 <label for="rating">Review</label>
                <fieldset class="starability-slot mb-0">
                  
                    <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked aria-label="No rating." />
                    <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                    <label for="first-rate1" title="Terrible">1 star</label>
                    <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                    <label for="first-rate2" title="Not good">2 stars</label>
                    <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                    <label for="first-rate3" title="Average">3 stars</label>
                    <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                    <label for="first-rate4" title="Very good">4 stars</label>
                    <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                    <label for="first-rate5" title="Amazing">5 stars</label>
                </fieldset>
                <div class="mb-2">
                    <label for="comment" class="form-label"><i class="fa-solid fa-comment"></i>Comment</label>
                    <textarea id="comment" class="form-control " name="review[comment]" cols="20" rows="3" required placeholder="Write your comment..."></textarea>
                    <div class="invalid-feedback">
                     Please leave a comment.
                    </div>
                </div>
                
                <button class="btn"> Submit </button>
                 
            </form>
            <% } %>
             </div>
            <div class="row">
                <div class="div offset-3">
                   <h4>All Reviews</h4>
                   </div>
                <% for(review of listing.reviews){ %>
                    
                    <div class="card col-6 offset-3 mb-2 pe-0" >
                        <div class="card-body">
                            <p class="card-title"><b>@<%=review.author.username %></b></p>
                            
                            <div class="d-flex justify-content-between align-items-end ">
                                <div>
                                    <p class="card-text rmm"><%- getStarRatingHTML(review.rating) %></p>    
                                <p class="card-text mb-0"><%= review.comment %></p> 
                                </div>
                                 <% if(currUser){ %>
                                <form class="delbtnform" method="post" action="/listings/<%= listing._id%>/reviews/<%=review._id%>?_method=DELETE"><button class="delbtn" ><i class="fa-solid fa-trash" style="font-size: medium;"></i></button></form>
                                <% } %>
                            </div>
                            
                            
                        </div>
                    </div>
                <% } %>
                </div>
            </div>
   
    
    
    