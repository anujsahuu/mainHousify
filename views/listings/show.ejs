<% layout("layouts/boilerplate") %>
<body>
    <div class="row mt-3 ">
        <div class="col-8 offset-3">
            <h2> <%= listing.title %></h2>
        </div>
        <div class="card col-6 offset-3">
            <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="<%= listing.title %>">
            <div class="card-body">
                <h5 class="card-text mt-2">"<%= listing.description %>"</h5>
                <h5 class="card-text">&#8377 <%= listing.price ? listing.price.toLocaleString("en-IN") : 'N/A' %></h5>
                <h5 class="card-text"><i class="fa-solid fa-location-dot"></i> <%= listing.location %> , <%= listing.country %></h5>
            </div><br>
            <div class="btns">
            <form method="GET" action="/listings/<%= listing._id%>/edit">
                    <button class="btn"> Edit</button>
        </form>

        <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
                    <button class="btn"> Delete </button>
        </form>
        </div>
        </div>
        
        
        </div> 
    